{
	"name": "treeploy",
	"version": "1.2.0",
	"description": "Directory tree deployment script",
	"homepage": "https://github.com/jnterry/treeploy",
	"main": "src/treeploy.js",
	"repository": {
		"type": "git",
		"url": "git://github.com/jnterry/treeploy.git"
	},
	"scripts": {
		"build": "./node_modules/.bin/tsc",
		"test": "sudo -E env \"PATH=$PATH\" ./node_modules/.bin/nyc ./node_modules/.bin/mocha && ./node_modules/.bin/nyc report --reporter lcov --reporter html",
		"clean": "sudo rm -rf dist coverage exe",
		"cbr": "npm run clean && npm run build && npm test",
		"docs": "./node_modules/.bin/typedoc --out docs"
	},
	"author": "Jamie Terry",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"colors": "1.3.2",
		"dot": "1.1.2",
		"js-yaml": "^3.13.1",
		"node-ssh": "5.1.2"
	},
	"devDependencies": {
		"@types/dot": "1.1.2",
		"@types/js-yaml": "3.11.2",
		"@types/node": "10.9.2",
		"@types/ssh2": "0.5.35",
		"chai": "4.1.2",
		"chai-as-promised": "7.1.1",
		"coveralls": "3.0.2",
		"istanbul": "0.4.5",
		"mocha": "5.2.0",
		"mock-fs": "4.7.0",
		"nyc": "13.0.1",
		"pkg": "4.3.4",
		"rewire": "4.0.1",
		"source-map-support": "0.5.9",
		"ts-node": "7.0.1",
		"typedoc": "^0.15.0",
		"typescript": "3.0.1"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"src/**/*"
		],
		"exclude": [
			"**/*/*.d.ts"
		],
		"all": true,
		"require": [
			"ts-node/register",
			"source-map-support/register"
		]
	}
}
